<header class="header">
  {{#if calendarButton}}
    <i id="calendarIcon" class="fa fa-calendar header__icon"></i>
  {{/if}}
  {{#if back}}
    <a href="{{{back}}}"><i class="fa fa-arrow-left header__icon" aria-hidden="true"></i></a>
  {{/if}}

  <a href="/en" class="header__title">Nazareth Events</a>

  <div class="header__options">
    <label class="header__options__language" for="settings-toggle">
      <svg fill="#FFFFFF" height="27" viewBox="0 0 24 24" width="27" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0h24v24H0z" fill="none"/>
        <path d="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98s.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.03.24.24.42.49.42h4c.25 0 .46-.18.49-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zM12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z"/>
      </svg>
    </label>
    <a class="header__options__search">
      <svg fill="#FFFFFF" height="29" viewBox="0 0 24 24" width="29" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </a>
    <input type="checkbox" class="hidden" id="settings-toggle" />
    <div class="header__options__dialogue header__options__unhide">
      <a id="langAr" class="header__options__dialogue__link {{#if arabic}}header__options__dialogue__link--active{{/if}}">Arabic</a>
      <a id="langEn" class="header__options__dialogue__link {{#if english}}header__options__dialogue__link--active{{/if}}">English</a>
    </div>
</header>
<div class="header__spacing"></div>

{{#if filterButtons}}
  <div class="search-bar" id="searchBar">
    <section class="search-bar__top">
      <section class="search-bar__top__filter">
        <label for="filterEvents" class="hidden">Filter events by name and location</label>
        <input id="filterEvents" placeholder="Search..." type="text" class="search-bar__top__filter__input"/>
      </section>

      <a href="#" id="toggleCategorySelect" class="search-bar__top__category__toggle">
        <?xml version="1.0" encoding="utf-8"?>
        <svg width="22" height="22" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M480 1408v128h-352v-128h352zm352-128q26 0 45 19t19 45v256q0 26-19 45t-45 19h-256q-26 0-45-19t-19-45v-256q0-26 19-45t45-19h256zm160-384v128h-864v-128h864zm-640-512v128h-224v-128h224zm1312 1024v128h-736v-128h736zm-960-1152q26 0 45 19t19 45v256q0 26-19 45t-45 19h-256q-26 0-45-19t-19-45v-256q0-26 19-45t45-19h256zm640 512q26 0 45 19t19 45v256q0 26-19 45t-45 19h-256q-26 0-45-19t-19-45v-256q0-26 19-45t45-19h256zm320 128v128h-224v-128h224zm0-512v128h-864v-128h864z" fill="#6c6c6c"/></svg>
      </a>
    </section>
    <section class="search-bar__categories">
    {{#each categories}}
    <label class="search-bar__category">
      <input class="hidden" type="checkbox" name="{{this}}" value="{{this}}">
      <span class="search-bar__category__name">{{this}}</span>
    </label>
    {{/each}}
    </section>
  </div>
{{/if}}
