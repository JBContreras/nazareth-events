<div class="event-details">
  <div class="eventDetailsHeader">
    <div>
      {{>header}}
    </div>
    <div class="prevBtn ">
      <a href="{{{back}}}"><span class="glyphicon glyphicon-chevron-left"></span></a>
    </div>
  </div>
  <div class="event-details text-center">
    <h1>{{options.name}}</h1>
    <img src="{{options.img}}" alt="event picture">
    <br>
    <h4>{{options.time}}</h4>
    <h4>{{options.where}}</h4>
    <h4>Price: </h4><h4>{{options.cost}}</h4>
    <p class="text-muted">{{options.description}}</p>
  </div>
</div>
